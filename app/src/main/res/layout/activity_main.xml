<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_900"
    android:paddingBottom="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvOperation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?colorSurface"
        android:padding="8dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5x2" />

    <TextView
    android:id="@+id/tvResult"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="?colorSurface"
    android:padding="8dp"
    android:textAppearance="?attr/textAppearanceHeadline3"
    android:textColor="@color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvOperation"
    app:layout_constraintBottom_toTopOf="@id/llTop"
    android:gravity="center_vertical|end"
    android:layout_marginBottom="8dp"
    tools:text="10.0" />


    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H, 4:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/btnPoint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="."
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="0"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/teal_200"/>

        <Button
            android:id="@+id/btnResolve"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:text="="
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/teal_700"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPreBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toTopOf="@id/llBottom"
        app:layout_constraintDimensionRatio="H, 4:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="1"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/teal_200"/>

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="2"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/teal_200"/>


        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="3"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/teal_200"/>

        <Button
            android:id="@+id/btnSum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="+"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/purple_500"/>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMiddle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toTopOf="@id/llPreBottom"
        app:layout_constraintDimensionRatio="H, 4:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="4"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/teal_200"/>

        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="5"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/teal_200"/>


        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="6"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/teal_200"/>

        <Button
            android:id="@+id/btnSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="-"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/purple_500"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPreTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toTopOf="@id/llMiddle"
        app:layout_constraintDimensionRatio="H, 4:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="7"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/teal_200"/>

        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="8"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/teal_200"/>


        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="9"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/teal_200"/>

        <Button
            android:id="@+id/btnMulti"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="x"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/purple_500"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toTopOf="@id/llPreTop"
        app:layout_constraintDimensionRatio="H, 4:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:text="CLEAR"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/purple_200"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:layout_marginStart="8dp"
            app:icon="@drawable/ic_backspace"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:backgroundTint="@color/teal_700"/>

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="รท"
            android:layout_marginStart="8dp"
            android:textSize="32sp"
            android:backgroundTint="@color/purple_500"/>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>